<div class="p-5 border rounded m-auto w-100">
  <h1>Welcome to your private space</h1>
  <p class="mb-4">To log in enter your username and press connect</p>
  <%= form_with scope: :user, url: '/sessions' do |f| %>
    <div class="input-group">
      <%= f.text_field :username, required: true, placeholder: 'Username', class: 'form-control' %>
      <%= f.submit 'Connect', class: 'btn btn-dark' %>
    </div>
  <% end %>
</div>

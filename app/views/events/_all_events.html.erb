<h1 class="mb-3"><%= description %> events</h1>
<table class="table mb-4">
  <thead>
    <tr>
      <th scope="col">Host</th>
      <th scope="col">Event name</th>
      <th scope="col">Location</th>
      <th scope="col">Date & Time</th>
      <th scope="col" colspan=2>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% events.each do |event| %>
      <tr>
        <td><%= event.user.username %></td>
        <td><%= event.event_name %></td>
        <td><%= event.location %></td>
        <td><%= event.time %></td>
        <td><%= link_to 'Show event', event, class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Attend event', "/events/#{event.id}/invitations/attend", method: :post, class: 'btn btn-success btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

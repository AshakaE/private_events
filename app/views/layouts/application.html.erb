<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex mb-2">
      <div class="container-fluid">
        <%= link_to 'Private Events', root_path, class: 'navbar-brand' %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to 'Home', root_path, class: 'nav-link active', 'aria-current': 'page' %>
            </li>
          </ul>
        </div>
        <%= link_to 'Log in', new_session_path, class: 'btn btn-outline-success ml-auto' %>
        <%= link_to 'Sign up', new_user_path, class: 'ml-2 btn btn-outline-light' %>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
